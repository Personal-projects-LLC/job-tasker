generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  active
  completed
  archived
}

model Project {
  id          String        @id @default(uuid())
  title       String
  description String
  status      ProjectStatus @default(active)
  tasksCount  Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("projects")
}
